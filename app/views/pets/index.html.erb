<h1>Our Pets</h1>

<% @pets.each do |pet| %>
  <%= image_tag ( pet.image ) %>
  <h2><%= link_to pet.name, "/pets/#{pet.id}" %></h2>
  <p>Age: <%= pet.age %></p>
  <p><%= pet.sex %></p>
  <p>Located at: <%= pet.shelter.name %></p>
  <%= link_to "Edit Pet", "/pets/#{pet.id}/edit" %>
  <%= link_to "Delete Pet", "/pets/#{pet.id}", method: :delete %><br/>
<% end %>
