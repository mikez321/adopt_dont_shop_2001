<h1> Pets at <%= @shelter.name %> </h1>

<% @pets.each do |pet| %>
  <%= image_tag ( pet.image ) %>
  <h2><%= link_to "#{pet.name}", "/pets/#{pet.id}" %></h2>
  <p>Status: <%= pet.adopt_status %>
  <p>Age: <%= pet.age %></p>
  <p><%= pet.sex %></p>
  <p><%= pet.description %></p>
  <%= link_to "Edit Pet", "/pets/#{pet.id}/edit" %>
  <%= link_to "Delete Pet", "/pets/#{pet.id}", method: :delete %><br/>
<% end %>
